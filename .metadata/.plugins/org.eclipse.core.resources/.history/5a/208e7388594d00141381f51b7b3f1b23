		number[9] = nines.grabImage(1, 1, 300, 450);//9
		number[10] = emptys.grabImage(1, 1, 300, 450);//empty
		
		sign[0] = pluss.grabImage(1, 1, 300, 450);//+
		sign[1] = minuss.grabImage(1, 1, 300, 450);//-
		sign[2] = minipluss.grabImage(1, 1, 16, 20);//mini+
		sign[3] = miniminuss.grabImage(1, 1, 16, 20);//mini-
		
		star[0] = star0s.grabImage(1, 1, 300, 300);//star empty
		star[1] = star1s.grabImage(1, 1, 300, 300);//star 1/4
		star[2] = star2s.grabImage(1, 1, 300, 300);//star 1/2
		star[3] = star3s.grabImage(1, 1, 300, 300);//star 3/4
		star[4] = star4s.grabImage(1, 1, 300, 300);//star full
		

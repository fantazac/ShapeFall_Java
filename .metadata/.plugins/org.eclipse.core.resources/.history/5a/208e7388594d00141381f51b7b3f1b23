	private void getTextures(){
		
		back[0] = backs.grabImage(1, 1, 1000, 600);//background
		back[1] = back2s.grabImage(1, 1, 1280, 720);//blackscreen
		
		number[0] = zeros.grabImage(1, 1, 300, 450);//0
		number[1] = ones.grabImage(1, 1, 300, 450);//1
		number[2] = twos.grabImage(1, 1, 300, 450);//2
		number[3] = threes.grabImage(1, 1, 300, 450);//3
		number[4] = fours.grabImage(1, 1, 300, 450);//4
